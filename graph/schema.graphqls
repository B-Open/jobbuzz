# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewJob {
  text: String!
  userId: String!
}

type Job {
  id: ID!
  title: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createJob(input: NewJob!): Job!
}
